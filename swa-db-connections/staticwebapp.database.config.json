{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": [
          "http://localhost:4280"
        ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {    
    "HolidayRequest": {
      "source": "dbo.HolidayRequest",
      "relationships": {
        "RequestType": {
          "cardinality": "one",
          "target.entity": "RequestType",
          "source.fields": [
            "RequestTypeId"
          ],
          "target.fields": [
            "RequestTypeId"
          ]
        }        
      },
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "RequestType": {
      "source": "dbo.RequestType",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    }
  }
}